<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.admin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".module.app.singleton.AdminApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <service
            android:name=".module.app.infra.socket.SocketConnectionManager"
            android:enabled="true"
            android:exported="false" />

        <activity
            android:name=".module.app.view.activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".module.party.view.activity.AuthActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".module.app.view.activity.HomeActivity" />
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="admin.db" />
        <meta-data
            android:name="VERSION"
            android:value="1" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="model" />

    </application>

</manifest>
