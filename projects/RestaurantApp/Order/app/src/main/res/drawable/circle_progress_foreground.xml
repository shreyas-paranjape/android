<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:innerRadius="@dimen/ring_radius"
            android:shape="ring"
            android:thickness="@dimen/ring_thick"
            android:useLevel="false">

            <solid android:color="@color/grey_500" />
            <!-- <gradient
                 android:endColor="@color/primary_color_dark"
                 android:startColor="@color/primary_color"
                 android:type="sweep" />-->
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="-90"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-90">
            <shape
                android:innerRadius="@dimen/ring_radius"
                android:shape="ring"
                android:thickness="@dimen/ring_thick"
                android:useLevel="true">

                <solid android:color="@color/primary_color_dark" />
                <!-- <gradient
                     android:endColor="@color/primary_color_dark"
                     android:startColor="@color/primary_color"
                     android:type="sweep" />-->
            </shape>
        </rotate>
    </item>
</layer-list>